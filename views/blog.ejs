<!DOCTYPE html>
<html lang="en">
  <head>
   <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1> <%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" alt="" width="400px" height="300px">
        <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profilepic %>" alt="" width="50px"><%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <h3>Comments</h3>
      <form action="/blog/comments/<%= blog._id %>" method="post">

        <% if (locals.user) { %>
          <div class="mb-3">
            <input type="text"
             class="content"
             name="content"
             placeholder="Enter Your Comment"
             style="width: 800px; height: 60px;">
          </form> <br><br>
  
          <button class="btn btn-sm btn-primary" style="height: 40px; width: 100px;" type="submit">Add</button>
        </div>
        <% } %>

    <%- include('./partials/script') %>
  </body>
</html>
